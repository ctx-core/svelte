{
	"compileOnSave": true,
	"compilerOptions": {
		"target": "ES2018",
		"composite": true,
		"declaration": true,
		"sourceMap": true,
		"noEmitOnError": true,
		"noErrorTruncation": true,
		"module": "esnext",
		"moduleResolution": "node",
		"esModuleInterop": true,
		"noImplicitAny": true,
		"resolveJsonModule": true,
		"allowSyntheticDefaultImports": true,
		"noImplicitThis": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"typeRoots": [
			"../../../node_modules/@types",
			"../../node_modules/@types",
			"node_modules/@types"
		],
		"rootDir": "src",
		"outDir": "src",
		"mapRoot": "src",
		"declarationDir": "src",
		"lib": ["dom", "ESNext"],
		"importsNotUsedAsValues": "error",
		"strict": true
	},
	"exclude": [
		"node_modules",
		"dist"
	],
	"references": []
}
