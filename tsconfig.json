{
	"compileOnSave": true,
	"compilerOptions": {
		"target": "ES2020",
		"composite": true,
		"declaration": true,
		"noEmitOnError": true,
		"noErrorTruncation": true,
		"module": "esnext",
		"moduleResolution": "node",
		"esModuleInterop": true,
		"noImplicitAny": true,
		"resolveJsonModule": true,
		"allowSyntheticDefaultImports": true,
		"noImplicitThis": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"typeRoots": [
			"../../../node_modules/@types",
			"../../node_modules/@types",
			"node_modules/@types"
		],
		"outDir": ".",
		"declarationDir": ".",
		"lib": [
			"dom",
			"ES2020"
		],
		"importsNotUsedAsValues": "error",
		"strict": true
	},
	"exclude": [
		"node_modules"
	],
	"references": []
}
